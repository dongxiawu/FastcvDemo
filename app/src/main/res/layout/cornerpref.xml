<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
   <PreferenceCategory
      android:title="FastCorner Threshold">
      <ListPreference
         android:title="Thresholds"
         android:summary="Sets the camera thresholds"
         android:key="camThreshold"
         android:defaultValue="3"
         android:entries="@array/cornerDetectorThresholdArray"
         android:entryValues="@array/cornerDetectorValuesArray" />
   </PreferenceCategory>
 <PreferenceCategory
      android:title="Scaling">
      <ListPreference
         android:title="Scaling"
         android:summary="Enables SW downscaler"
         android:key="camScaler"
         android:defaultValue="0"
         android:entries="@array/cornerDetectorDownSampleArray"
         android:entryValues="@array/cornerDetectorDownSampleValuesArray" />
   </PreferenceCategory>
 <PreferenceCategory
      android:title="ToggleViewfinder">
      <ListPreference
         android:title="Toggle Viewfinder"
         android:summary="Enables or disables viewfinder"
         android:key="viewfinder"
         android:defaultValue="0"
         android:entries="@array/CameraOnOffArray"
         android:entryValues="@array/CameraOnOffValuesArray" />
   </PreferenceCategory>

<PreferenceCategory
      android:title="Enable Corner Overlay">
      <ListPreference
         android:title="Toggle Corner Overlay"
         android:summary="Enables or disables display of detected corner on viewfinder"
         android:key="cornerOverlay"
         android:defaultValue="1"
         android:entries="@array/CornerOnOnOffArray"
         android:entryValues="@array/CornerOnOffValuesArray" />
</PreferenceCategory>


<PreferenceCategory
      android:title="Enable Gaussian Filter">
      <ListPreference
         android:title="Toggle Gaussian 3x3 Filter "
         android:summary="Enables or disables 3x3 Gaussian Filter"
         android:key="gaussianEnable"
         android:defaultValue="1"
         android:entries="@array/GaussianOnOffArray"
         android:entryValues="@array/GaussianOnOffValuesArray" />
</PreferenceCategory>

<PreferenceCategory
      android:title="FastCV Detection">
      <ListPreference
         android:title="FastCV Detection "
         android:summary="Changes which detection function is used"
         android:key="detectionSwitch"
         android:defaultValue="1"
         android:entries="@array/DetectionArray"
         android:entryValues="@array/DetectionValuesArray" />
</PreferenceCategory>

</PreferenceScreen>