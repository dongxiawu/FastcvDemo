<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_text"/>
  	<TextView 
    	android:text="@string/textview01_text" 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:layout_below="@+id/text1" 
    	android:id="@+id/text2"/>
  
	<TextView 
        android:text="@string/textview01_text" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:layout_below="@+id/text2" 
        android:id="@+id/text3"/>
		
	<ToggleButton android:id="@+id/startStopSwitch"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textOn=""
        android:textOff=""         
        android:checked="true"       
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dip"
        android:background="@android:drawable/btn_default"
        android:button="@drawable/start_stop_button">
    </ToggleButton>

	<ToggleButton
	    android:id="@+id/previewSwitch"
	    android:layout_width="120dp"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_toLeftOf="@+id/startStopSwitch"
	    android:background="@android:drawable/btn_default"
	    android:checked="false"
	    android:textOff="ScaleDown"
	    android:textOn="StartPreview" />
		
</RelativeLayout>
